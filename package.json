{
  "name": "authors-haven",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "axios": "^0.18.0",
    "ckeditor4-react": "^0.1.0",
    "connected-react-router": "^6.1.0",
    "cuid": "^2.1.4",
    "enzyme": "^3.8.0",
    "enzyme-adapter-react-16": "^1.7.1",
    "history": "^4.7.2",
    "moment": "^2.24.0",
    "object-assign": "^4.1.1",
    "prop-types": "^15.6.2",
    "react": "^16.7.0",
    "react-ckeditor-component": "^1.1.0",
    "react-confirm-alert": "^2.0.7",
    "react-dom": "^16.7.0",
    "react-redux": "^6.0.0",
    "react-router": "^4.3.1",
    "react-router-dom": "^4.3.1",
    "react-scripts": "2.1.3",
    "redux": "^4.0.1",
    "redux-axios-middleware": "^4.0.0",
    "redux-immutable-state-invariant": "^2.1.0",
    "redux-logger": "^3.0.6",
    "redux-mock-store": "^1.5.3",
    "redux-persist": "^5.10.0",
    "redux-thunk": "^2.3.0",
    "semantic-ui-css": "^2.4.1",
    "semantic-ui-react": "^0.84.0",
    "toastr": "^2.1.4"
  },
  "scripts": {
    "build-css": "node-sass --include-path ./src --include-path ./node_modules src / -o src / ",
    "watch-css": "npm run build-css && node-sass --include-path ./src --include-path ./node_modules src/ -o src/ --watch--recursive ",
    "start": "npm-run-all -p watch-css start-js",
    "build": "npm run build-css && react-scripts build",
    "start-js": "react-scripts start",
    "test": "react-scripts test",
    "test:coverage": "npm run test -- --coverage",
    "eject": "react-scripts eject",
    "linter": "eslint src"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "devDependencies": {
    "enzyme-to-json": "^3.3.5",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-react": "^7.12.3",
    "husky": "^1.3.1",
    "jest": "^23.6.0",
    "jest-environment-webdriver": "^0.2.0",
    "node-sass": "^4.11.0",
    "npm-run-all": "^4.1.5",
    "undefined": "^0.1.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run linter",
      "pre-push": "npm run test -- --bail --detectOpenHandles --forceExit --coverage --passWithNoTests"
    }
  }
}
